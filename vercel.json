{
    "version": 2,
    "builds": [
        {
            "src": "core/wsgi.py",
            "use": "@vercel/python",
            
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.12", 
                "buildCommand": "sh build_files.bash" 
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "core/wsgi.py"
        }
    ]
}